<div class="list-header text-center text-white" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
  <h1><%= @list.name %></h1>
</div>
<div class="container text-center">
  <ol class="d-flex flex-wrap justify-content-around">
    <% @bookmarks.each do |bm| %>
      <li class="card shadowed m-3" style="width: 18rem">
        <%= image_tag bm.movie.poster_url, class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-title"><%= bm.movie.title %></h5>
          <p class="card-text"><%= bm.comment %></p>
          <%= link_to "Delete", bookmark_path(bm), data: { turbo_method: :delete, turbo_confirm: "Delete bookmark?" }, class: "btn btn-danger" %>
        </div>
      </li>
    <% end %>
  </ol>

  <%= link_to "Add film", new_list_bookmark_path(@list), class: "btn btn-primary"%>
</div>
